-- A query finding the average amount paid by the top 5 customers using a CTE

WITH average_cte (customer_id, first_name, last_name, city, country, sum_amount)
AS
(SELECT A.customer_id,
	A.first_name,
	A.last_name,
	C.city,
	D.country,
	SUM(E.amount) AS total_per_customer
FROM customer A
INNER JOIN address B ON A.address_id = B.address_id
INNER JOIN city C ON B.city_id = C.city_id
INNER JOIN country D ON C.country_id = D.country_id
INNER JOIN payment E ON A.customer_id = E.customer_id
GROUP BY A.customer_id, first_name, last_name, country, city
ORDER BY total_per_customer DESC
LIMIT 5)
SELECT AVG(sum_amount) AS average_amount_paid
FROM average_cte



-- Determine how many of the top 5 customers are in each country

WITH cte_top_5_customers (customer_id, first_name, last_name, city, country, sum_amount)
AS
(SELECT A.customer_id,
			A.first_name,
			A.last_name,
			C.city,
			D.country,
			SUM(E.amount) AS total_amount_paid
FROM customer A
INNER JOIN address B ON A.address_id = B.address_id
INNER JOIN city C ON B.city_id = C.city_id
INNER JOIN country D ON C.country_id = D.country_id
INNER JOIN payment E ON A.customer_id = E.customer_id
GROUP BY A.customer_id, first_name, last_name, country, city
ORDER BY total_amount_paid DESC
LIMIT 5)

SELECT D.country,
	COUNT(DISTINCT A.customer_id) AS all_customer_count,
	COUNT(cte_top_5_customers.customer_id) AS top_customer_count
FROM customer A
INNER JOIN address B ON A.address_id = B.address_id
INNER JOIN city C ON B.city_id = C.city_id
INNER JOIN country D ON C.country_id = D.country_id
LEFT JOIN cte_top_5_customers ON A.customer_id = cte_top_5_customers.customer_id
GROUP BY D.country
HAVING COUNT(cte_top_5_customers.customer_id) >0
ORDER BY all_customer_count DESC

Output:
Country	all_customer_count	top_customer_count
"India"		60			1
"China"		53			1
"United States"	36			1
"Japan"		31			1
"Mexico"	30			1

